<div class="card" style="margin-bottom: 1rem;">
  <h1 class="card-header card-title">
    Editing Friend
  </h1>
  <div class="card-body">
    <%= render 'form', friend: @friend %>
  </div>
</div>

<%=
  link_to 'Back',
  friends_path,
  class: "btn btn-dark"
%>
<%=
  link_to 'Show',
  @friend,
  class: "btn btn-secondary"
%>
<%=
  link_to 'Delete',
  @friend, method: :delete,
  data: { confirm: 'Are you sure?' },
  class: "btn btn-danger"
%>

