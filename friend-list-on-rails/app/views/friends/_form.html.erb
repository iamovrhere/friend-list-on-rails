<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>

  <div id="error_explanation" class="alert alert-danger alert-dismissible fade show" role="alert">
    <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

    <ul>
      <% friend.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name %>
    <%=
      form.text_field :first_name,
      class: "form-control",
      placeholder: "Enter first name"
    %>
  </div>

  <div class="field form-group">
    <%= form.label :last_name %>
    <%=
      form.text_field :last_name,
      class: "form-control",
      placeholder: "Enter last name"
    %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%=
      form.text_field :email,
      class: "form-control",
      placeholder: "example@example.com"
    %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%=
      form.text_field :phone,
      class: "form-control",
      placeholder: "###-###-#####"
    %>
  </div>

  <div class="field form-group">
    <%= form.label :twitter %>
    <%=
      form.text_field :twitter,
      class: "form-control",
      placeholder: "@twitterHandle"
    %>
  </div>

  <div class="actions">
    <%=
      form.submit class: "btn btn-primary"
    %>
  </div>
<% end %>
