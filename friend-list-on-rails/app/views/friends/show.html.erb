<p id="notice"><%= notice %></p>

<div class="card" >
  <div class="card-header", style="line-height: 2.5rem;">
  <%= @friend.first_name %> <%= @friend.last_name %>
  <%=
    link_to 'Edit',
    edit_friend_path(@friend),
    class: "btn btn-primary",
    style: "float: right"
  %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <strong>Email:</strong>
      <%= @friend.email %>
    </li>
    <li class="list-group-item">
      <strong>Phone:</strong>
      <%= @friend.phone %>
    </li>
    <li class="list-group-item">
      <strong>Twitter:</strong>
      <%= @friend.twitter %>
    </li>
  </ul>

  <div class="card-body">
    <%=
      link_to 'Back',
      friends_path,
      class: "btn btn-secondary"
    %>

  </div>

</div>
